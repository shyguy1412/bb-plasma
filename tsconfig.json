{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": ["esnext", "dom", "dom.iterable"],
    "baseUrl": "./",
    "jsx": "react",
    "jsxFactory": "window.React.createElement",
    "jsxFragmentFactory": "window.React.Fragment",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts*"]
}
